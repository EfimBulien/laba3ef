<Window x:Class="lab1ef.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1ef"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="DriversData" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id_driver}"/>
                <DataGridTextColumn Header="Имя водителя" Binding="{Binding firstname}"/>
                <DataGridTextColumn Header="Фамилия водителя" Binding="{Binding surname}"/>
                <DataGridTextColumn Header="Отчество водителя" Binding="{Binding middlename}"/>
                <DataGridTextColumn Header="Автомобиль" Binding="{Binding cars.model}"/>
                <DataGridTextColumn Header="Номер авто" Binding="{Binding cars.number}"/>
                <DataGridTextColumn Header="Цвет авто" Binding="{Binding cars.color}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

    